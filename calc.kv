<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text:"0"
            halign:"right"
            font_size:65
            size_hint:(1,.15)

        GridLayout:
            cols:4
            rows:5

            # row---1

            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"%"
                on_press:root.math_sign("%")
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"C"
                on_press:root.clear()
            Button:
                id: clear
                size_hint:(.2,.2)
                font_size:28
                text:u"\u00AB"
                on_press:root.remove()
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"/"
                on_press:root.math_sign("/")

            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"1"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(1)
            Button:
                id:two
                size_hint:(.2,.2)
                font_size:28
                text:"2"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(2)
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"3"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(3)
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"*"
                on_press:root.math_sign("*")

            #row---3

            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"4"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(4)
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"5"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(5)
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"6"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(6)
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"-"
                on_press:root.math_sign("-")

            #row---4

            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"7"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(7)
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"8"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(8)
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"9"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(9)
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"+"
                on_press:root.math_sign("+")

            #row---5

            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"+/-"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.signchange()
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"0"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_press(0)
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"."
                background_color:(157/255,157/255,157/255,1)
                on_press:root.dot()
            Button:
                size_hint:(.2,.2)
                font_size:28
                text:"="
                on_press:root.equals()